<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="family_budget_db" >
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.user" value="budget" />
            <property name="javax.persistence.jdbc.password" value="budget" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/family_budget_db?serverTimezone=UTC"/>
            <property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>